{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "outDir": "./built",
    "moduleResolution": "Node",
    "lib": ["ES2015", "DOM", "DOM.Iterable"], // async await 문법 사용
    "noImplicitAny": true
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules"
  ]
}